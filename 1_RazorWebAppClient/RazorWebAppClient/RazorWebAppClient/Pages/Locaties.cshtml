@page
@model RazorWebAppClient.Pages.LocatiesModel
@{
    var locaties = RazorWebAppClient.Data.Databank.Locaties;
    var rowId = 0;

}
<div>
    <h1>Locaties</h1>

</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">LocationId</th>
            <th scope="col">Postcode</th> 
            <th scope="col">City</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var loc in locaties)
        {
            rowId++;
            <tr>
                <th scope="row">@rowId</th>
                <td>@loc.LocationId</td>
                <td>@loc.PostCode</td>
                <td>@loc.City</td>
            </tr>
        }
    </tbody>
</table>